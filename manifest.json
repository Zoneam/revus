{
    "name": "Revus",
    "version": "1.0",
    "description": "Smart Amazon Reviews",
    "manifest_version": 3,
    "permissions": ["storage", "scripting", "tabs"],
    "icons": {
      "48": "icon48.png"
    },
    "action": {
      "default_icon": "icon48.png",
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*", "http://www.amazon.com/*"],
        "js": ["script.js"],
        "css": ["script.css"]
      }
    ]
  }
  